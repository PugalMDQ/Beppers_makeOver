<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

   </data>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:background="@null"
            android:padding="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_height="wrap_content">

                    <com.github.siyamed.shapeimageview.CircularImageView
                        android:id="@+id/imageView52"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginStart="8dp"
                        android:src="@drawable/noprofile"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/textView76"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="100dp"
                        android:text=""
                        android:textColor="@color/white"
                        android:fontFamily="@font/gilroy_regular"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toEndOf="@+id/imageView52"
                        app:layout_constraintTop_toTopOf="@+id/imageView52" />


                   <TextView
                        android:id="@+id/textView79"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="following you"
                        android:textColor="@color/white"
                        android:fontFamily="@font/gilroylight"
                        app:layout_constraintEnd_toEndOf="@+id/textView76"
                        app:layout_constraintStart_toStartOf="@+id/textView76"
                        app:layout_constraintTop_toBottomOf="@+id/textView76" />

                    <TextView
                        android:id="@+id/cl_decline"
                        android:layout_width="70dp"
                        android:layout_height="30dp"
                        android:layout_marginEnd="16dp"
                        android:background="@drawable/bg_logins"
                        android:gravity="center"
                        android:text="Block"
                        android:textSize="12sp"
                        android:textColor="@color/white"
                        android:fontFamily="@font/gilroy_regular"
                        app:layout_constraintBottom_toBottomOf="@+id/textView79"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/textView76"
                        app:layout_constraintVertical_bias="0.529" />
                </androidx.constraintlayout.widget.ConstraintLayout>

    </layout>