<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="dataItem"
            type="com.mdq.social.app.data.response.useralbum.TrendingItem" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_margin="3dp"
        android:background="@color/black"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/image_slider_search"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:background="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:scaleType="fitCenter"
          />

        <VideoView
            android:id="@+id/payer1"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:visibility="gone"
            android:background="@color/black"
            android:layout_gravity="center_vertical"
            android:foregroundGravity="center_vertical|center_horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.cardview.widget.CardView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="30dp"
            app:cardBackgroundColor="#B3000000"
            app:cardCornerRadius="200dp"
            android:visibility="gone"
            android:id="@+id/cardformuteAndUnmute"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent">

            <ImageView
                android:id="@+id/muteAndUnmute"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:tag="work"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/ic_play__1_" />

        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>