<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item>
        <shape android:shape="rectangle" >
            <corners
                android:radius="10dp"
                />
            <gradient
                android:angle="360"
                android:startColor="@color/txt_pink"
                android:endColor="@color/txt_red"
                android:type="linear" />
            <size android:width="84dp"
                android:height="84dp"/>
        </shape>
    </item>

    <item
        android:bottom="2dp"
        android:left="2dp"
        android:right="2dp"
        android:top="2dp">
        <shape android:shape="rectangle" >
            <corners
                android:radius="10dp"
                />
            <solid android:color="#66D5D5D8" />
        </shape>
    </item>

</layer-list>